---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	
	<main>
		<section id="hero">
			<a><img src={sensiaLogo.src} width="150" height="150" alt="Sensia Homepage" />
			</a>
			<h1>
				ENCUENTRA TU EQUILIBRIO INTERIOR
			</h1>
			<h2>
				Yoga, Pilates & Meditaci√≥n para tu Bienestar
			</h2>
			<section id="links">
				<a class="button_explore" href="">EXPLORA CLASES</a>
				<a class="button_booking" href="">RESERVA AHORA</a>
			</section>
		</section>
		<section id="side">
			<a class="enlace-yoga"><img src={yoga.src} width="250" height="250" alt="Yoga Link" /></a>
    		<a class="enlace-pilates"><img src={pilates.src} width="250" height="250" alt="Pilates Link" /></a>
    		<a class="enlace-meditacion"><img src={meditacion.src} width="250" height="250" alt="Meditacion Link" /></a>
		</section>
	</main>
</div>

