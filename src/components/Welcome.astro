<style>
	#background {
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		width: 80%;
		height: 100%;
		z-index: -2;
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		width: 80%;
		height: 100%;
		left: 0;
		margin-left: auto;
        margin-right: auto;
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: flex-start;
		gap: 20px;
    	padding-top: 250px;
	}

	h1 {
		color: #111812c2;
		font-size: 22px;
		margin-top: 0.25em;
		font-family: Times, 'Times New Roman', serif;
	}

	h2 {
		color: #111812c2;
		font-size: 18px;
		margin-top: 0.25em;
		font-family: Times, 'Times New Roman', serif;
	}

	#links {
		display: flex;
		gap: 16px;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 10px 12px;
		color: #111827;
		text-decoration: none;
		transition: color 0.2s;
	}

	#links a:hover {
		color: rgb(78, 80, 86);
	}

	#links a.button_explore {
		color: white;
		background: #e2884dee;
		border-radius: 10px;
	}

	#links a.button_booking {
		color: #111812c2; 
        border: 2px solid #111812c2;
        border-radius: 10px; 
        background-color: transparent; 
        padding: 10px 20px;
	}




	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			display: block;
			padding-top: 10%;
		}

		#links {
			flex-wrap: wrap;
		}

		#links a.button_explore {
			padding: 14px 18px;
		}

		h1 {
			line-height: 1.5;
		}
	}

	#side {
		position: fixed;
		width: 20%;
        height: 100%;
        top: 0;
        right: 0;
		background-color: #eee3d4;
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	#side img{
		max-width: 100%;
        height: auto;
        margin: 50px auto;
        display: block;
		border-radius: 15px;
	}
</style>
